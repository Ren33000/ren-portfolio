<div class="fixed-top-killer", id="projects">
  <div class="container">
    <div class="orange-box1">
    <div class="row">
      <div class="col-12">
        <div class="main-container"  style="margin-bottom: 0;background-color: transparent;padding-bottom: 0">
          <div class="div1"><h2>Projects</h2></div>
        </div>
        <div class="cards" style="padding-top: 4px;" data-aos="fade-up"
     data-aos-duration="3000">
          <% data.products.each do |product| %>
            <div>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path(product.image) %>)">
                <div class="card-description">
                  <h4><%= product.name %></h4>
                  <hr class="section-break-1" />
                  <h5 class="text-center "><%= product.position %></h5>
                  <p><%= product.description %></p>
                  <div class="d-flex justify-content-between align-items-center space-around mt-1">
                    <div class="card-tags">
                      <% product.tags.each do |tag| %>
                        <span><i class="<%= tag %>"></i></span>
                      <% end %>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center space-around mt-1">
                      <% link_to product.github, class: 'external-link', target: '_blank' do %>
                        <i class="fab fa-github"></i>
                        <% end %>
                      <% link_to product.url, class: 'external-link', target: '_blank' do %>
                        <i class="fas fa-external-link-alt"></i>
                        <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

